<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_output"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1FDFF"
            app:rowCount="5"
            app:columnCount="4"
            android:layout_margin="5dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_cancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:icon="@drawable/icon_c"
                app:iconPadding="10dp"
                app:iconSize="35dp" />
            <Button
                android:id="@+id/btn_percentage"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:iconPadding="10dp"
                app:iconSize="30dp"
                app:icon="@drawable/icon_percentage" />
            <Button
                android:id="@+id/btn_back_space"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                app:icon="@drawable/icon_clear_symbol"
                app:iconPadding="10dp"
                app:iconSize="40dp"/>
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                app:iconPadding="10dp"
                app:iconSize="40dp"
                app:icon="@drawable/icon_divide"/>

            <Button
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:text="9"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle" />
            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:iconPadding="10dp"
                app:iconSize="40dp"
                app:icon="@drawable/icon_multiply"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="4"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle" />
            <Button
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="5"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:text="6"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:iconPadding="10dp"
                app:iconSize="40dp"
                app:icon="@drawable/icon_subtract"
                style="?attr/materialButtonOutlinedStyle"
                />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="2"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:text="3"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:iconPadding="10dp"
                app:iconSize="40dp"
                app:icon="@drawable/icon_plus"
                style="?attr/materialButtonOutlinedStyle"
                />

            <Button
                android:id="@+id/btn_double_zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:text="00"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="0"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:text="."
                android:textStyle="bold"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/btn_equal_to"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:iconPadding="10dp"
                app:iconSize="35dp"
                app:icon="@drawable/icon_equal_sign"
                style="?attr/materialButtonOutlinedStyle"
                />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>